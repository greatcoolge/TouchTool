<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false">

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/status_group"
        android:layout_width="24dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        app:selectionRequired="true"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/success_button"
            style="?attr/materialIconButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            app:backgroundTint="@color/background_tint_check"
            app:icon="@drawable/icon_check"
            app:iconGravity="textTop"
            app:iconSize="16dp"
            app:iconTint="@color/container_tint_check"
            app:shapeAppearance="@style/Theme.TouchTool.ShapeAppearance.Corner.Full"
            app:strokeWidth="0.75dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fail_button"
            style="?attr/materialIconButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            app:backgroundTint="@color/background_tint_check"
            app:icon="@drawable/icon_close"
            app:iconGravity="textTop"
            app:iconSize="16dp"
            app:iconTint="@color/container_tint_check"
            app:shapeAppearance="@style/Theme.TouchTool.ShapeAppearance.Corner.Full"
            app:strokeWidth="0.75dp" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <include
        android:id="@+id/text_base_include"
        layout="@layout/float_action_text_base"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_weight="1" />

</LinearLayout>